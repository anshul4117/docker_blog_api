{
    "info": {
        "name": "Blogging Platform API",
        "description": "RESTful API for managing blog posts — built with Node.js, Express, MongoDB & Docker",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "variable": [
        {
            "key": "baseUrl",
            "value": "http://localhost:3000",
            "type": "string"
        },
        {
            "key": "postId",
            "value": "",
            "type": "string"
        }
    ],
    "item": [
        {
            "name": "Health Check",
            "item": [
                {
                    "name": "Health Check",
                    "request": {
                        "method": "GET",
                        "url": {
                            "raw": "{{baseUrl}}/health",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "health"
                            ]
                        },
                        "description": "Check if the API server is running"
                    }
                }
            ]
        },
        {
            "name": "Posts",
            "item": [
                {
                    "name": "Create Post",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "const res = pm.response.json();",
                                    "if (res.data && res.data._id) {",
                                    "    pm.collectionVariables.set('postId', res.data._id);",
                                    "}",
                                    "pm.test('Status code is 201', () => pm.response.to.have.status(201));",
                                    "pm.test('Response has success true', () => pm.expect(res.success).to.be.true);",
                                    "pm.test('Response has data with _id', () => pm.expect(res.data._id).to.exist);"
                                ]
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "url": {
                            "raw": "{{baseUrl}}/api/v1/posts",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "v1",
                                "posts"
                            ]
                        },
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"title\": \"My First Blog Post\",\n  \"content\": \"This is a comprehensive blog post about learning Docker and Node.js\",\n  \"author\": \"Anshul Kumar\",\n  \"tags\": [\"nodejs\", \"docker\", \"express\"]\n}"
                        },
                        "description": "Create a new blog post"
                    }
                },
                {
                    "name": "Create Post — Validation Error",
                    "request": {
                        "method": "POST",
                        "url": {
                            "raw": "{{baseUrl}}/api/v1/posts",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "v1",
                                "posts"
                            ]
                        },
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"title\": \"Hi\",\n  \"content\": \"Short\"\n}"
                        },
                        "description": "Test validation — missing author, short title & content"
                    }
                },
                {
                    "name": "Get All Posts",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "const res = pm.response.json();",
                                    "pm.test('Status code is 200', () => pm.response.to.have.status(200));",
                                    "pm.test('Response has pagination', () => pm.expect(res.pagination).to.exist);",
                                    "pm.test('Response has data array', () => pm.expect(res.data).to.be.an('array'));"
                                ]
                            }
                        }
                    ],
                    "request": {
                        "method": "GET",
                        "url": {
                            "raw": "{{baseUrl}}/api/v1/posts",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "v1",
                                "posts"
                            ]
                        },
                        "description": "Get all blog posts with default pagination"
                    }
                },
                {
                    "name": "Get All Posts — With Search & Pagination",
                    "request": {
                        "method": "GET",
                        "url": {
                            "raw": "{{baseUrl}}/api/v1/posts?search=docker&page=1&limit=5",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "v1",
                                "posts"
                            ],
                            "query": [
                                {
                                    "key": "search",
                                    "value": "docker"
                                },
                                {
                                    "key": "page",
                                    "value": "1"
                                },
                                {
                                    "key": "limit",
                                    "value": "5"
                                }
                            ]
                        },
                        "description": "Search posts by title/content with pagination"
                    }
                },
                {
                    "name": "Get Single Post",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "const res = pm.response.json();",
                                    "pm.test('Status code is 200', () => pm.response.to.have.status(200));",
                                    "pm.test('Response has post data', () => pm.expect(res.data._id).to.exist);"
                                ]
                            }
                        }
                    ],
                    "request": {
                        "method": "GET",
                        "url": {
                            "raw": "{{baseUrl}}/api/v1/posts/{{postId}}",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "v1",
                                "posts",
                                "{{postId}}"
                            ]
                        },
                        "description": "Get a single post by ID"
                    }
                },
                {
                    "name": "Get Single Post — Not Found",
                    "request": {
                        "method": "GET",
                        "url": {
                            "raw": "{{baseUrl}}/api/v1/posts/64f000000000000000000000",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "v1",
                                "posts",
                                "64f000000000000000000000"
                            ]
                        },
                        "description": "Test 404 — non-existent post ID"
                    }
                },
                {
                    "name": "Update Post (PUT)",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "const res = pm.response.json();",
                                    "pm.test('Status code is 200', () => pm.response.to.have.status(200));",
                                    "pm.test('Title is updated', () => pm.expect(res.data.title).to.eql('Updated Blog Post'));"
                                ]
                            }
                        }
                    ],
                    "request": {
                        "method": "PUT",
                        "url": {
                            "raw": "{{baseUrl}}/api/v1/posts/{{postId}}",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "v1",
                                "posts",
                                "{{postId}}"
                            ]
                        },
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"title\": \"Updated Blog Post\",\n  \"content\": \"This content has been fully updated with new information\",\n  \"author\": \"Anshul Kumar\",\n  \"tags\": [\"updated\", \"docker\"]\n}"
                        },
                        "description": "Full update — replace all fields"
                    }
                },
                {
                    "name": "Partial Update (PATCH)",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "const res = pm.response.json();",
                                    "pm.test('Status code is 200', () => pm.response.to.have.status(200));",
                                    "pm.test('Only title changed', () => pm.expect(res.data.title).to.eql('Partially Updated Title'));"
                                ]
                            }
                        }
                    ],
                    "request": {
                        "method": "PATCH",
                        "url": {
                            "raw": "{{baseUrl}}/api/v1/posts/{{postId}}",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "v1",
                                "posts",
                                "{{postId}}"
                            ]
                        },
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"title\": \"Partially Updated Title\"\n}"
                        },
                        "description": "Partial update — only change the title"
                    }
                },
                {
                    "name": "Delete Post",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "pm.test('Status code is 204', () => pm.response.to.have.status(204));"
                                ]
                            }
                        }
                    ],
                    "request": {
                        "method": "DELETE",
                        "url": {
                            "raw": "{{baseUrl}}/api/v1/posts/{{postId}}",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "v1",
                                "posts",
                                "{{postId}}"
                            ]
                        },
                        "description": "Soft delete — sets isDeleted: true"
                    }
                },
                {
                    "name": "Get Deleted Post — Should 404",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "pm.test('Status code is 404', () => pm.response.to.have.status(404));"
                                ]
                            }
                        }
                    ],
                    "request": {
                        "method": "GET",
                        "url": {
                            "raw": "{{baseUrl}}/api/v1/posts/{{postId}}",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "v1",
                                "posts",
                                "{{postId}}"
                            ]
                        },
                        "description": "Verify soft-deleted post returns 404"
                    }
                }
            ]
        },
        {
            "name": "Error Cases",
            "item": [
                {
                    "name": "Invalid Route — 404",
                    "request": {
                        "method": "GET",
                        "url": {
                            "raw": "{{baseUrl}}/api/v1/invalid",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "v1",
                                "invalid"
                            ]
                        },
                        "description": "Test 404 handler for unknown routes"
                    }
                },
                {
                    "name": "Invalid ID Format",
                    "request": {
                        "method": "GET",
                        "url": {
                            "raw": "{{baseUrl}}/api/v1/posts/invalid-id",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "v1",
                                "posts",
                                "invalid-id"
                            ]
                        },
                        "description": "Test CastError handling for malformed ObjectId"
                    }
                }
            ]
        }
    ]
}